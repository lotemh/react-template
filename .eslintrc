{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "mocha": true
    },
    "rules": {
        "no-console": ["error"],
        "no-unused-vars": ["error"],
        "padded-blocks": 0,
        "indent": ["error", 4],
        "max-statements": ["error", 17]
    }
}
